<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/trendingRepo">

    <fragment
        android:id="@+id/trendingRepo"
        android:name="com.example.githubrepo.TrendingRepoFragment"
        tools:layout="@layout/fragment_trending_repo">
        <action
            android:id="@+id/action_trendingRepo_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.githubrepo.LoginFragment"
        tools:layout="@layout/fragment_login" />

</navigation>